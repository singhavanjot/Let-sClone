# ===========================================
# Remote Desktop Clone - Environment Variables
# ===========================================
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Database
# Local: mongodb://localhost:27017/remote-desktop
# Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/remote-desktop
MONGODB_URI=mongodb://localhost:27017/remote-desktop

# JWT Configuration
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=9f2cA8d7KxQ4mLZP1NwYH0EJvT5bS6RrUoCMeI3aFhWqG2

JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
# Frontend URL for development
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
# Window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
# Session timeout in milliseconds (4 hours = 14400000)
SESSION_TIMEOUT_MS=14400000
# Session code length (characters)
SESSION_CODE_LENGTH=6

# WebRTC Configuration (optional)
# TURN_SERVER_URL=turn:your-turn-server.com:3478
# TURN_USERNAME=username
# TURN_PASSWORD=password

# Logging
# Levels: error, warn, info, http, debug
LOG_LEVEL=info
